    <div id="sign-in" style="display: block;">
        <a href="#reg" onclick="toggle_visibility('reg');toggle_visibility('sign-in');">Don't have an account? Sign up</a>
        <form id="local-sign-in" action="/login" method="post">
        <div>
            <p></p>
            <label>Username:</label>
            <input type="text" name="username"/>
        </div>
        <div>
            <label>Password:</label>
            <input type="password" name="password"/>
        </div>
        <div>
            <input type="submit" class="btn btn-primary btn-sm" value="Log In"/>
        </div>
      </form>
    </div>

